<layout>
<!--
Default layout, loads most of the pages
-->
    <default>
        <reference name="head">
            <action method="addItem" ifconfig="ash_fontawesome/general/enabled">
                <type>link_rel</type>
                <name helper="ash_fontawesome/getFontAwesomeUrl" />
                <params>rel="stylesheet" type="text/css"</params>
            </action>
        </reference>
    </default>
</layout>
