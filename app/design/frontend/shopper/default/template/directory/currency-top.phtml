/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>

<!-- Currency BOF -->
<?php if($this->getCurrencyCount()>1): ?>
<?php
$items = array();
    $_current = null;
foreach ($this->getCurrencies() as $_code => $_name){
    $_selected = $_selected_option = '';
    if ($_code == $this->getCurrentCurrencyCode()) {
        $_selected = ' class="selected"';
        $_selected_option = ' selected="selected"';
        $_current = $_code;
    }
    $items[] = '<li><a href="'. $this->getSwitchCurrencyUrl($_code) .'" '. $_selected .'>'. $_name.' - '.$_code  .'</a></li>';
    $select_currency[] = '<option value="'. $this->getSwitchCurrencyUrl($_code) .'" '. $_selected_option .'>'. $_name.' - '.$_code  .'</option>';
}
?>
<div class="header-switch currency-switch">
    <span><?php echo $this->__('Currency:') ?>
        <span class="current"><?php echo $this->htmlEscape($_current); ?></span>
    </span>
    <div class="header-dropdown">
        <ul><?php echo implode('', $items); ?></ul>
    </div>
</div>
<div class="currency-select">
    <span><?php echo $this->__('Currency:') ?></span>
    <select name="currency_switch" onchange="window.location=this.value"><?php echo implode('', $select_currency); ?></select>
</div>
<?php endif; ?>
<!-- Currency EOF -->