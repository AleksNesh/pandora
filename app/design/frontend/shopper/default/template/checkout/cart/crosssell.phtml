    <div class="clear"></div>
</div>
<script type="text/javascript">
    jQuery(document).ready(function($) {

	    var carouselID = '#shopper_carousel<?php echo $time; ?>';

	    $('script', carouselID).detach();

	    //line up carousel items
	    var lineUp = function()
	    {
		    var height = 0;
		    $('li.item', carouselID).each(function(i,v){
			    $('div.product-info', this).css('height', 'auto');
			    var h = $('div.product-info', this).height();
			    if ( h > height ) {
				    height = h;
			    }
		    });
		    $('li.item div.product-info', carouselID).height(height);
	    };

        function mycarousel_initCallback(carousel)
        {
	        lineUp();
            $('#shopper_carousel_next<?php echo $time; ?>').bind('click', function() {
                carousel.next();
                return false;
            });
            $('#shopper_carousel_prev<?php echo $time; ?>').bind('click', function() {
                carousel.prev();
                return false;
            });

            if (typeof $('.slider-container').swipe !== 'undefined'){
                $('.slider-container').swipe({
                    swipeLeft: function() { carousel.next(); },
                    swipeRight: function() { carousel.prev(); },
                    swipeMoving: function() {}
                });
            }
        };

	    var mycarousel_reloadCallback = function(carousel)
	    {
		    if ( !isResize('shopper_carousel_<?php echo $time; ?>') ) return;
		    carousel.list = $(carouselID);
		    var li = $(carouselID).children('li');
		    carousel.list.css(carousel.lt, "0px");
		    carousel.list.css(carousel.wh, $(li.get(0)).outerWidth(!0) * li.size() + 100);
		    carousel.first = 1;
		    carousel.last = $(carouselID).parent().width() / $(li.get(0)).outerWidth(!0);
		    lineUp();
	    }

	    $('#shopper_carousel<?php echo $time; ?>').jcarousel({
		    scroll: 1,
		    initCallback: mycarousel_initCallback,
		    reloadCallback: mycarousel_reloadCallback,
		    buttonNextHTML: null,
		    buttonPrevHTML: null
	    });

        $('div.main').after($('<div class="slider-container" />'));

        function carouselResize ()
        {
            var $h = $('.main div.slider-container').outerHeight();
            var $wrap = $('.main-container > .slider-container').css({
                width: '100%',
                height: $h,
                marginTop: '-'+$h+'px',
                position: 'absolute'
            });
        }
        carouselResize();
        $(window).resize(carouselResize);
    });
</script>
