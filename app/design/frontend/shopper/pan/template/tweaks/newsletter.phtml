<?php $helper = Mage::helper('tweaks') ?>
<?php if ($helper->isOnepageCheckoutNewsletterEnabled()): ?>
<li id="register-customer-newsletter"><input type="checkbox" name="billing[is_subscribed]" value="1" title="<?php echo Mage::helper('tweaks')->__('Sign Up for Newsletter') ?>" id="billing:is_subscribed"<?php echo ($this->isChecked() || $helper->isNewsletterChecked())?' checked="checked"':'' ?> />&nbsp;<label for="billing:is_subscribed"><?php echo Mage::helper('tweaks')->__('Sign Up for Newsletter') ?></label></li>

<script type="text/javascript">
//<![CDATA[
Element.show('register-customer-newsletter');
hideCheckoutNewsletter = function() {
	<?php if ($this->isRegister()): ?>
		<?php if ($helper->isNewsletterVisibleRegister()): ?>
			Element.show('register-customer-newsletter');
		<?php else: ?>
			Element.hide('register-customer-newsletter');
			$('billing:is_subscribed').checked = false;
		<?php endif; ?>
	<?php else: ?>
		<?php if ($helper->isNewsletterVisibleGuest()): ?>
			Element.show('register-customer-newsletter');
		<?php else: ?>
			Element.hide('register-customer-newsletter');
			$('billing:is_subscribed').checked = false;
		<?php endif ?>
	<?php endif; ?>
}
setInterval("hideCheckoutNewsletter()", 100);
//]]>
</script>
<?php endif ?>