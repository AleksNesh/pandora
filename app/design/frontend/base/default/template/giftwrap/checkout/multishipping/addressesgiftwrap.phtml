                                    }
                                    selectedItem = true;
                                    var qtycanwrap = $('qty_can_wrapped_' + wraps[i].value).value;
                                    var qtywrap = $('qty_wrap_' + wraps[i].value).value;
                                    if (parseInt(qtycanwrap) < parseInt(qtywrap)) {
                                        alert("Can't save gift box because qty wrap is too large !");
