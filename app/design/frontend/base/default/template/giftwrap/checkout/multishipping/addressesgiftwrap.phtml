                    function checkAll() {
                        var selectedItem = false;
                        var wraps = $$("input[name='wrap[]']");
                        if (wraps.length > 0) {
                            for (var i = 0; i < wraps.length; i++) {
                                if (wraps[i].checked) {
                                    if (!checkNumber($('qty_wrap_' + wraps[i].value))) {
                                        alert('Please fill numeric for quantity wrap!');
