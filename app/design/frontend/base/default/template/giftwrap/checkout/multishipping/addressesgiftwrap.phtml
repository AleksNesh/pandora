                    function checkNumber(el) {
                        var check = true;
                        var value = el.value;
                        for (var i = 0; i < value.length; ++i)
                        {
                            var new_key = value.charAt(i); //cycle through characters
                            if (((new_key < "0") || (new_key > "9")) &&
                                    !(new_key == ""))
                            {
                                check = false;
                                break;
                            }
                        }
                        return check;
                    }
