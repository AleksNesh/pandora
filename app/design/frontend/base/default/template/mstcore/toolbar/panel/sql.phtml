<?php foreach ($this->getQueries() as $connection => $queries) : ?>
<h1><?php echo $connection; ?> (<?php echo count($queries); ?> queries)</h1>

<table class="queries">
    <thead>
        <tr>
            <th class="query">Query</th>
            <th class="duration">Duration</th>
        </tr>
    </thead>
    <tbody>
        <?php if (is_array($queries)): ?>
        <?php foreach ($queries as $query) : ?>
        <tr>
            <td class="query">
                <?php echo $this->getFormattedSQL($query->getQuery()); ?>
            </td>
            <td class="duration">
                <?php echo $this->prettyInterval($query->getElapsedSecs() * 1000); ?>
            </td>
        </tr>
        <?php endforeach ?>
        <?php endif ?>
    </tbody>
</table>
<?php endforeach; ?>