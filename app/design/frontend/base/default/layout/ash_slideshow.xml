<layout>
<!--
Default layout, loads most of the pages
-->
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_js</type>
                <name>ash_slideshow/js/bxslider/jquery.bxslider.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>ash_slideshow/js/bxslider/plugins/jquery.easing.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>ash_slideshow/js/bxslider/plugins/jquery.fitvids.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>ash_slideshow/css/bxslider/bxslider.css</name>
            </action>
        </reference>
    </default>
</layout>
