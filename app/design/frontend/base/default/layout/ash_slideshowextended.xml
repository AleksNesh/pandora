<layout>
<!--
Default layout, loads most of the pages
-->
    <default>
        <reference name="head">
            <!-- Add Foundation Reveal for modal popups instead of old fancybox -->
            <action method="addItem">
                <type>skin_js</type>
                <name>ash_slideshow/foundation-5.4.5.custom/js/foundation/foundation.js</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>ash_slideshow/foundation-5.4.5.custom/js/foundation/foundation.reveal.js</name>
            </action>

            <action method="addItem">
                <type>skin_css</type>
                <name>ash_slideshow/foundation-5.4.5.custom/css/foundation.css</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>ash_slideshow/css/ash_slideshow_overrides.css</name>
            </action>
        </reference>
    </default>
</layout>
