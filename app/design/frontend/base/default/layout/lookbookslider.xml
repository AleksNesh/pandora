<layout version="0.1.0">
    <default>
        <reference name="root">
            <block type="lookbookslider/page_html_head" name="lookbookslider_head" as="lookbookslider_head"/>
        </reference>
        <reference name="head">
            <action method="addItem"><type>skin_css</type><name>lookbookslider/css/lookbookslider.css</name></action>
        </reference>
    </default>
    <cms_page>
        <reference name="content">
            <block type="lookbookslider/content_top" name="lookbookslider_content_top" template="lookbookslider/content/top.phtml" before="-"/>
            <block type="lookbookslider/content_bottom" name="lookbookslider_content_bottom" template="lookbookslider/content/bottom.phtml" after="-"/>
        </reference>
    </cms_page>
    <catalog_category_default>
        <reference name="content">
            <block type="lookbookslider/content_top" name="lookbookslider_content_top" template="lookbookslider/content/top.phtml" before="-"/>
            <block type="lookbookslider/content_bottom" name="lookbookslider_content_bottom" template="lookbookslider/content/bottom.phtml" after="-"/>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="content">
            <block type="lookbookslider/content_top" name="lookbookslider_content_top" template="lookbookslider/content/top.phtml" before="-"/>
            <block type="lookbookslider/content_bottom" name="lookbookslider_content_bottom" template="lookbookslider/content/bottom.phtml" after="-"/>
        </reference>
    </catalog_category_layered>
</layout> 