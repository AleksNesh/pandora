    </PRODUCT_TYPE_virtual>
	<catalog_category_default>
		<reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="product_list"><action method="setTemplate"><template>customstock/catalog/product/list.phtml</template></action></reference>
	</catalog_category_default>
	<catalog_category_layered>
		<reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="product_list"><action method="setTemplate"><template>customstock/catalog/product/list.phtml</template></action></reference>
