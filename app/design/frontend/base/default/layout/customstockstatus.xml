<?xml version="1.0"?>
<layout version="1.5.0">
	<PRODUCT_TYPE_simple translate="label" module="catalog">
        <reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="product.info.simple"><action method="setTemplate"><template>customstock/catalog/product/view/type/default.phtml</template></action></reference>
    </PRODUCT_TYPE_simple>
	<PRODUCT_TYPE_bundle translate="label" module="bundle">
        <reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="product.info.bundle"><action method="setTemplate"><template>customstock/bundle/catalog/product/view/type/bundle.phtml</template></action></reference>
	</PRODUCT_TYPE_bundle>
	<PRODUCT_TYPE_grouped translate="label" module="catalog">
        <reference name="head"><action method="addCss" ifconfig="custom_stock/groupedproducts/enabled"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="product.info.grouped"><action method="setTemplate" ifconfig="custom_stock/groupedproducts/enabled"><template>customstock/catalog/product/view/type/grouped.phtml</template></action></reference>
	</PRODUCT_TYPE_grouped>
	<PRODUCT_TYPE_configurable translate="label" module="catalog">
        <reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="head"><action method="addJs"><script>cjm/customstockstatus/customstockstatus.js</script></action></reference>
		<reference name="product.info.configurable"><action method="setTemplate"><template>customstock/catalog/product/view/type/default.phtml</template></action></reference>
    </PRODUCT_TYPE_configurable>
	<PRODUCT_TYPE_virtual translate="label" module="catalog">
        <reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
