	<catalogsearch_result_index>
		<reference name="head"><action method="addCss"><stylesheet>css/stockstatus.css</stylesheet><params>media="screen"</params></action></reference>
		<reference name="search_result_list"><action method="setTemplate"><template>customstock/catalog/product/list.phtml</template></action></reference>
	</catalogsearch_result_index>
