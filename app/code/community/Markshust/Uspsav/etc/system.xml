<config>
    <sections>
        <checkout>
            <groups>
                <markshust_uspsav>
                    <label>USPS Address Verification</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <usps_url translate="label">
                            <label>USPS URL</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Ex: http://production.shippingapis.com/ShippingAPI.dll</comment>
                        </usps_url>
                        <usps_account_number translate="label">
                            <label>USPS Account Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Ex. 123ABCDE4567</comment>
                        </usps_account_number>
                    </fields>
                </markshust_uspsav>
            </groups>
        </checkout>
    </sections>
</config>
