<config>
    <modules>
        <Fooman_Common>
            <version>1.2.9</version>
        </Fooman_Common>
    </modules>
    <global>
        <blocks>
            <foomancommon>
                <class>Fooman_Common_Block</class>
            </foomancommon>
        </blocks>
        <models>
            <foomancommon>
                <class>Fooman_Common_Model</class>
            </foomancommon>
        </models>
        <helpers>
            <foomancommon>
                <class>Fooman_Common_Helper</class>
            </foomancommon>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <foomancommon after="Mage_Adminhtml">Fooman_Common_Adminhtml</foomancommon>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <foomancommon>
                    <file>fooman_common.xml</file>
                </foomancommon>
            </updates>
        </layout>
    </adminhtml>
    <phpunit>
        <suite>
            <modules>
                <Fooman_Common/>
            </modules>
        </suite>
    </phpunit>
</config>
