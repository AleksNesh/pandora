                <block_compared>1</block_compared>
                <block_compared_order>100</block_compared_order>
	            <block_custom>0</block_custom>
                <block_custom_order>110</block_custom_order>
            </blocks>
		</shoppersettings>
		<shopperbrands>
			<main>
				<status>1</status>
				<pages>1</pages>
				<brands>0</brands>
				<attribute>manufacturer</attribute>
