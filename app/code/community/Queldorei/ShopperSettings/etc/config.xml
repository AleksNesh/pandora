<?xml version="1.0"?>
<config>
    <modules>
        <Queldorei_ShopperSettings>
            <version>1.5.4</version>
        </Queldorei_ShopperSettings>
    </modules>
    <frontend>
        <layout>
            <updates>
                <shoppersettings>
                    <file>queldorei/shoppersettings.xml</file>
                </shoppersettings>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <shoppersettings>
                <use>admin</use>
                <args>
                    <module>Queldorei_ShopperSettings</module>
                    <frontName>shoppersettings</frontName>
                </args>
            </shoppersettings>
        </routers>
    </admin>            
	<adminhtml>
        <layout>
            <updates>
                <shoppersettings>
                    <file>queldorei/shoppersettings.xml</file>
                </shoppersettings>
            </updates>
        </layout>
        <menu>
            <queldorei translate="title" module="shoppersettings">
                <title>Queldorei</title>
                <sort_order>9999</sort_order>
                <children>
                    <shopper translate="title" module="shoppersettings">
                        <title>Shopper</title>
                        <sort_order>10</sort_order>
                        <children>
                            <settings translate="title" module="shoppersettings">
                                <title>Theme Settings</title>
                                <sort_order>10</sort_order>
                                <action>adminhtml/system_config/edit/section/shoppersettings</action>
                            </settings>
	                        <brands translate="title" module="shoppersettings">
		                        <title>Brands Settings</title>
		                        <sort_order>20</sort_order>
		                        <action>adminhtml/system_config/edit/section/shopperbrands</action>
	                        </brands>
                            <restore translate="title" module="shoppersettings">
                                <title>Restore Defaults</title>
                                <sort_order>30</sort_order>
                                <action>shoppersettings/adminhtml_restore</action>
                            </restore>
                            <activate translate="title" module="shoppersettings">
                                <title>Activate Theme</title>
                                <sort_order>40</sort_order>
                                <action>shoppersettings/adminhtml_activate</action>
                            </activate>
                        </children>
                    </shopper>
                </children>
            </queldorei>
        </menu>
		<translate>
		     <modules>
		         <queldorei>
		             <files>
		                 <default>Queldorei_ShopperSettings.csv</default>
		             </files>
		         </queldorei>
		     </modules>
		 </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
			                <children>
			                    <config>
			                        <children>
			                            <shoppersettings>
			                                <title>Shopper Theme Settings</title>
			                            </shoppersettings>
				                        <shopperbrands>
					                        <title>Shopper Brands Settings</title>
				                        </shopperbrands>
			                        </children>
			                    </config>
			                </children>
			            </system>
						<queldorei>
			                <children>
                                <shopper>
                                    <title>Shopper</title>
                                    <children>
                                        <settings>
                                            <title>Theme Settings</title>
                                        </settings>
	                                    <brands>
		                                    <title>Brands Settings</title>
	                                    </brands>
                                        <restore>
                                            <title>Restore Defaults</title>
                                        </restore>
                                        <activate>
                                            <title>Activate Theme</title>
                                        </activate>
                                    </children>
                                </shopper>
			                </children>
			            </queldorei>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>
	<global>
        <blocks>
            <shoppersettings>
                <class>Queldorei_ShopperSettings_Block</class>
            </shoppersettings>
        </blocks>
        <helpers>
            <shoppersettings>
                <class>Queldorei_ShopperSettings_Helper</class>
            </shoppersettings>
        </helpers>
		<models>
            <shoppersettings>
                <class>Queldorei_ShopperSettings_Model</class>
            </shoppersettings>
        </models>
        <resources>
            <shoppersettings_setup>
                <setup>
                    <module>Queldorei_ShopperSettings</module>
	                <class>Queldorei_ShopperSettings_Model_Resource_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </shoppersettings_setup>
            <shoppersettings_write>
                <connection>
                  <use>core_write</use>
                </connection>
            </shoppersettings_write>
            <shoppersettings_read>
               <connection>
                <use>core_read</use>
              </connection>
            </shoppersettings_read>
        </resources>
    </global>
	<default>
		<shoppersettings>
			<appearance>
				<enable_font>1</enable_font>
				<font>Open Sans</font>
				<color>#97d2c9</color>
