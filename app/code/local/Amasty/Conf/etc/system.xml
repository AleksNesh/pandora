                    <fields>
                        <enable translate="label">
                            <label>Enable "Zoom" Feature</label>
                            <comment><![CDATA[
                                    <script type="text/javascript">
                                        checkEnable = function() {
                                            if ($('amconf_zoom_type').getValue() == "window") {
                                                $('row_amconf_zoom_settings_viewer_position').show();
                                                $('row_amconf_zoom_settings_offset_x').show();
                                                $('row_amconf_zoom_settings_offset_y').show();
                                                $('row_amconf_zoom_settings_viewer_width').show();
                                                $('row_amconf_zoom_settings_viewer_height').show();
                                                $('row_amconf_zoom_settings_use_tint_effect').show();
                                                $('row_amconf_zoom_settings_tint_color').show();
                                                $('row_amconf_zoom_settings_lens_size').hide();
                                            }
                                            else if($('amconf_zoom_type').getValue() == "inner") {
                                                $('row_amconf_zoom_settings_viewer_position').hide();
                                                $('row_amconf_zoom_settings_offset_x').hide();
                                                $('row_amconf_zoom_settings_offset_y').hide();
                                                $('row_amconf_zoom_settings_viewer_width').hide();
                                                $('row_amconf_zoom_settings_viewer_height').hide();
                                                $('row_amconf_zoom_settings_use_tint_effect').hide();
                                                $('row_amconf_zoom_settings_tint_color').hide();
                                                $('row_amconf_zoom_settings_lens_size').hide();
                                            }
                                             else if($('amconf_zoom_type').getValue() == "lens") {
                                                $('row_amconf_zoom_settings_viewer_position').hide();
                                                $('row_amconf_zoom_settings_offset_x').hide();
                                                $('row_amconf_zoom_settings_offset_y').hide();
                                                $('row_amconf_zoom_settings_viewer_width').hide();
                                                $('row_amconf_zoom_settings_viewer_height').hide();
                                                $('row_amconf_zoom_settings_use_tint_effect').hide();
                                                $('row_amconf_zoom_settings_tint_color').hide();
                                                $('row_amconf_zoom_settings_lens_size').show();
                                            }
                                        } 
                                        Event.observe(window, 'load', function() {
                                            Event.observe('amconf_zoom_type', 'change', checkEnable);
                                            checkEnable();
                                        })
                                    </script>
                                ]]>
                            </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
