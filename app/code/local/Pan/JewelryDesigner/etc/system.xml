<config>
    <tabs>
        <pan_jewelrydesigner translate="label" module="pan_jewelrydesigner">
            <label>Pandora Extensions</label>
            <sort_order>-10</sort_order>
        </pan_jewelrydesigner>
    </tabs>
    <sections>
        <pan_jewelrydesigner translate="label" module="pan_jewelrydesigner">
            <label>Jewelry Designer</label>
            <tab>pan_core</tab>
            <frontend_type>text</frontend_type>
            <sort_order>0</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <info>
                    <frontend_model>pan_jewelrydesigner/system_config_info</frontend_model>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </info>
                <general>
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <expanded>true</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled in Frontend: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enable/Disables Module for Frontend Users</comment>
                        </enabled>
                        <enabled_in_admin>
                            <label>Enabled in Admin: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment>Enable/Disables Module for Admin Users</comment>
                        </enabled_in_admin>
                    </fields>
                </general>
            </groups>
        </pan_jewelrydesigner>
    </sections>
</config>
