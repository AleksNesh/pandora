<config>
    <sections>
        <ash_fontawesome translate="label" module="ash_fontawesome">
            <label>Font Awesome</label>
            <tab>ash</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="ash_fontawesome">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label,comment" module="ash_fontawesome">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </enabled>
                        <use_cdn translate="label" module="ash_fontawesome">
                            <label>Use CDN</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </use_cdn>
                        <use_minified translate="label" module="ash_fontawesome">
                            <label>Use Minified Source</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </use_minified>
                    </fields>
                </general>
                <version translate="label" module="ash_fontawesome">
                    <label>Versions</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <fontawesome translate="label" module="ash_fontawesome">
                            <label>Font Awesome</label>
                            <frontend_type>select</frontend_type>
                            <source_model>ash_fontawesome/system_config_source_version_fontawesome</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </fontawesome>
                    </fields>
                </version>
            </groups>
        </ash_fontawesome>
    </sections>
</config>
