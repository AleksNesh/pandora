<config>
    <sections>
        <ash_slideshowextended translate="label" module="ash_slideshowextended">
            <label>Ash Slideshow (Extended)</label>
            <tab>ash</tab>
            <frontend_type>text</frontend_type>
            <sort_order>30</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <hint>
                    <frontend_model>ash_slideshowextended/adminhtml_system_config_fieldset_hint</frontend_model>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </hint>
                <general translate="label" module="ash_slideshowextended">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled>
                            <label>Enabled: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <comment>Enable/Disable slideshow</comment>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </enabled>
                        <show>
                            <label>Show on: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>ash_slideshowextended/system_config_source_show</source_model>
                            <comment>Select pages to show slideshow</comment>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </show>
                        <slider>
                            <label>Select Slideshow: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>ash_slideshow/system_config_source_slideshow</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_store>1</show_in_store>
                            <show_in_website>1</show_in_website>
                        </slider>
                    </fields>
                </general>
            </groups>
        </ash_slideshowextended>
    </sections>
</config>
