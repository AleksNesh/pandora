<config>
    <sections>
        <ash_validatecreditcard translate="label" module="ash_validatecreditcard">
            <label>Validate Credit Card</label>
            <tab>ash</tab>
            <frontend_type>text</frontend_type>
            <sort_order>26</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <hint>
                    <frontend_model>ash_validatecreditcard/adminhtml_system_config_fieldset_hint</frontend_model>
                    <sort_order>5</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                </hint>
                <general translate="label" module="ash_validatecreditcard">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cards_icon_size translate="label" module="ash_validatecreditcard">
                            <label>Card Icon Size</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Ash_ValidateCreditCard_Model_System_Config_Source_Iconsize</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment>Choose between Large (73 x 44) and Small (50 x 30) icon sizes.</comment>
                        </cards_icon_size>
                        <cards_orientation translate="label" module="ash_validatecreditcard">
                            <label>Card Icon Orientation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>Ash_ValidateCreditCard_Model_System_Config_Source_Iconorientation</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <comment>Show card icons in list in either a horizontal list or vertical stack.</comment>
                        </cards_orientation>
                    </fields>
                </general>
            </groups>
        </ash_validatecreditcard>
    </sections>
</config>
