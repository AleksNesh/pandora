<config>
    <modules>
        <Ash_Jquery>
             <version>1.4.0</version>
             <ashup
                remote="https://s3.amazonaws.com/augustash/mage/ash_jquery-latest.zip" />
        </Ash_Jquery>
    </modules>

    <global>
        <helpers>
            <ash_jquery>
                <class>Ash_Jquery_Helper</class>
            </ash_jquery>
        </helpers>
        <models>
            <ash_jquery>
                <class>Ash_Jquery_Model</class>
            </ash_jquery>
        </models>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <Ash_Jquery>
                    <files>
                        <default>Ash_Jquery.csv</default>
                    </files>
                </Ash_Jquery>
            </modules>
        </translate>
        <layout>
            <updates>
                <ash_jquery>
                    <file>ash_jquery.xml</file>
                </ash_jquery>
            </updates>
        </layout>
    </adminhtml>

    <frontend>
        <layout>
            <updates>
                <ash_jquery>
                    <file>ash_jquery.xml</file>
                </ash_jquery>
            </updates>
        </layout>
    </frontend>

    <default>
        <ash_jquery>
            <general>
                <use_minified>1</use_minified>
            </general>
            <cdn>
                <enabled>1</enabled>
                <jquery_enabled>1</jquery_enabled>
                <jquery_migrate_enabled>1</jquery_migrate_enabled>
                <jqueryui_enabled>0</jqueryui_enabled>
            </cdn>
            <jquery>
                <enabled>0</enabled>
                <ui_enabled>0</ui_enabled>
            </jquery>
            <version>
                <jquery>1.11.0</jquery>
                <jquery_ui>1.10.4</jquery_ui>
            </version>
        </ash_jquery>
    </default>
</config>
